{
  "name": "@ltodorov/primes",
  "version": "2.0.1",
  "description": "Utility functions for working with prime numbers",
  "type": "module",
  "engines": {
    "node": ">=22",
    "pnpm": ">=9"
  },
  "packageManager": "pnpm@9.15.4",
  "main": "./dist/index.js",
  "bin": "./index.js",
  "scripts": {
    "clean": "pnpm run /^clean:.+/",
    "clean:build": "rimraf ./dist",
    "clean:test": "rimraf ./coverage",
    "build": "pnpm clean:build && tsc",
    "lint": "pnpm biome lint --write .",
    "format": "pnpm biome format --write .",
    "check": "pnpm biome check --write .",
    "check:ci": "pnpm biome ci .",
    "test": "vitest",
    "coverage": "vitest run --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ltodorov/primes.git"
  },
  "bugs": {
    "url": "https://github.com/ltodorov/primes/issues"
  },
  "homepage": "https://github.com/ltodorov/primes",
  "keywords": [
    "typescript",
    "javascript",
    "nodejs",
    "prime numbers"
  ],
  "author": "Lyubomir Todorov",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.1.1",
    "@inquirer/testing": "^2.1.48",
    "@types/node": "^22.16.4",
    "@vitest/coverage-v8": "^3.2.4",
    "lefthook": "^1.12.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@inquirer/input": "^4.2.0",
    "@inquirer/select": "^4.2.4",
    "chalk": "^5.4.1"
  },
  "pnpm": {
    "overrides": {
      "esbuild@<=0.24.2": ">=0.25.0"
    }
  }
}
